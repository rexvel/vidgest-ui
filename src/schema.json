{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "topics": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "topic": {
              "type": "string",
              "description": "The main topic or subject"
            },
            "subtopics": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "description": "A description or explanation of a subtopic"
                  }
                },
                "required": ["description"]
              },
              "minItems": 1
            }
          },
          "required": ["topic", "subtopics"]
        },
        "minItems": 1
      }
    },
    "required": ["topics"]
  }